<h1>つぶやき一覧</h1>

<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>

<% @twitters.each do |twitter| %>
  <tr>
    <td> <% = twitter.title %></td>
    <td> <% = twitter.content %></td>
    <td><% = link_to '詳細を確認する',twitter_path(twitter.id) %></td>
    <td><% = link_to "つぶやきを編集する", edit_twitter_path(twitter.id)%></td>
  </tr>
<% end %>
</table>

