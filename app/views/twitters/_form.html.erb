<%= form_with(model: @twitter, local: true, url: choose_new_or_edit) do |form| %>
  <% if @twitter.errors.any? %>
    <div id="error_explanation">
      <h2><%= @twitter.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @twitter.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="twitter_content">
    <%= form.label :content %>
    <%= form.text_field :content%>
  </div>

  <div class="link_fuck">
  <%= form.submit "fuck!!!" %>
</div>

<% end %>

<%= link_to "つぶやき一覧に戻る", twitters_path %>
